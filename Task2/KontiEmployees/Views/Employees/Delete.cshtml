@model KontiEmployees.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление записи о сотруднике</h1>

<h3>Вы уверены что хотите удалить это?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ФИО
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            Телефон
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            E-mail
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Тип сотрудника
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Title)
        </dd>
        <dt class="col-sm-2">
            Адрес
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress.Country),
            @Html.DisplayFor(model => model.Adress.City),
            @Html.DisplayFor(model => model.Adress.Street),
            д. @Html.DisplayFor(model => model.Adress.HouseNum),
            кв. @Html.DisplayFor(model => model.Adress.ApartmentNum)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
